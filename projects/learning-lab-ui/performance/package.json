{
  "name": "learning-lab-astro-performance",
  "version": "1.0.0",
  "description": "High-performance Astro implementation of the Learning Lab",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check && tsc --noEmit",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write src/",

    "perf:build": "npm run build && npm run perf:analyze",
    "perf:analyze": "npx bundlesize",
    "perf:lighthouse": "npx lighthouse http://localhost:4321 --output-path=./performance/lighthouse-report.html --output=html",
    "perf:audit": "npm run build && npm run perf:lighthouse",
    "perf:benchmark": "node performance/benchmark.js",
    "perf:compare": "node performance/compare.js",
    "perf:monitor": "node performance/monitor.js",

    "test": "vitest",
    "test:e2e": "playwright test",
    "test:perf": "playwright test performance/"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.0",
    "@astrojs/mdx": "^2.0.0",
    "@astrojs/react": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "astro": "^4.0.0",
    "astro-compress": "^2.2.0",
    "bundlesize": "^0.18.1",
    "eslint": "^8.0.0",
    "eslint-plugin-astro": "^0.29.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "lighthouse": "^11.0.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.12.0",
    "sharp": "^0.33.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0",
    "vitest": "^1.0.0",
    "web-vitals": "^3.5.0"
  },
  "dependencies": {
    "@fontsource/inter": "^5.0.0",
    "dompurify": "^3.0.0",
    "fuse.js": "^7.0.0",
    "marked": "^11.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.css",
      "maxSize": "15 kB"
    },
    {
      "path": "./dist/assets/index-*.js",
      "maxSize": "25 kB"
    },
    {
      "path": "./dist/assets/react-vendor-*.js",
      "maxSize": "45 kB"
    },
    {
      "path": "./dist/assets/markdown-vendor-*.js",
      "maxSize": "20 kB"
    }
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "astro",
    "performance",
    "learning-lab",
    "claude-code",
    "multi-agent",
    "react",
    "mdx"
  ]
}